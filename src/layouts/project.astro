---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Body from "../components/Body.astro";

const { content } = Astro.props;
---

<html lang={content.lang || "en"}>
  <head>
    <MainHead title={content.title} description={content.description} />
    <style>
      .hero {
        padding: 8rem;
        display: flex;
        background-color: var(--t-fg);
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 25vw;
        font-family: "architects daughter", sans-serif;
        color: (black, 0.8);
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .tag {
        margin-left: 0.5em;
        margin-right: 0.5em;
        text-transform: uppercase;
        font-family: "kosugi maru", sans-serif;
      }

      .tag:nth-of-type(1n) {
        color: var(--c-green);
      }
      .tag:nth-of-type(2n) {
        color: var(--c-orange);
      }
      .tag:nth-of-type(3n) {
        color: var(--c-blue);
      }
      .tag:nth-of-type(4n) {
        color: var(--c-pink);
      }

      .title {
        font-size: var(--f-u10);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.0625em;
      }

      .leadIn {
        padding-top: 4em;
        color: var(--t-bg);
        background-color: var(--t-fg);
        text-align: center;
      }

      .tagline {
        font-weight: 300;
        font-size: var(--f-u3);
        line-height: 1.5;
        font-family: "M PLUS Rounded 1c", sans-serif;
      }

      .content {
        font-size: var(--f-u1);
        line-height: 2.2;
        max-width: 50em;
        margin: auto;
      }

      .wrapper {
        padding-bottom: 4em;
        margin-bottom: 4em;
      }

      footer {
        text-align: center;
        margin-top: 3rem;
      }
    </style>
  </head>
  <Body>
    <Nav />
    <div class="flex-1 w-full pt-[64px]"></div>

    <header style={`background-image:url(${content.img})`} class="hero pt-[56px]">
      <h1 class="title">{content.title}</h1>
    </header>
    <div class="leadIn">
      <div class="wrapper">
        {content.tags.map((t) => <span class="tag">{t}</span>)}
        <h3 class="tagline">{content.description}</h3>
      </div>
    </div>
    <div class="wrapper">
      <div class="content"><slot /></div>
      <div class="flex justify-center items center gap-5">
        <a href={content.appLink}>
          <button id="link" type="submit" class="hover:text-orange-300"
            >App Link</button
          >
        </a>
        <a href={content.github}>
          <button id="github" class="hover:text-orange-300">GitHub</button>
        </a>
      </div>
    </div>
    <footer>
      <a href="/projects" class="button">View More</a>
    </footer>
    <Footer />
  </Body>
</html>
