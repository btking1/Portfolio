---
import MainHead from "../components/MainHead.astro";
import Body from "../components/Body.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
// import { Icon } from "astro-icon";
import Formbox from "../components/Formbox.jsx";
import { prisma } from "src/db/client";

const response = await prisma.user.findMany().then((res) => res);

const users = response[0].createdAt

console.log(users);
---

<html lang="en">
  <head>
    <MainHead
      title="Resume | Booker King"
      description="Booker King resume page"
    />
  </head>
  <Body>
    <Nav />

    <div class="flex-1 w-full pt-[64px]"></div>
    <code>
      {users}
    </code>
    <main class="flex h-screen w-full items-center justify-center">
      <Formbox client:load>
        <form
          class="flex flex-col min-w-[50vw] h-1/2 gap-3 font-mono"
          action=""
        >
          <input
            class="border-2 dark:border-none border-current rounded-md p-2"
            type="text"
            placeholder="name"
          />
          <input
            class="border-2 dark:border-none border-current rounded-md p-2"
            type="text"
            placeholder="email"
          />
          <textarea
            class="border-2 dark:border-none border-current rounded-md p-2"
            placeholder="message"></textarea>

          <button
            class="bg-blue-400 px-3 py-2 dark:bg-slate-900 text-zinc-900 dark:text-zinc-300 w-1/3 mt-5 border-white border rounded-md font-mono text-lg"
            >submit</button
          >
        </form>
      </Formbox>
    </main>
    <Footer />
  </Body>
</html>
