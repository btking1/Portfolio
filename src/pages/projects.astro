---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Body from "../components/Body.astro";

const projects = (await Astro.glob("./project/**/*.md"))
  .filter(({ frontmatter }) => !!frontmatter.publishDate)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publishDate).valueOf() -
      new Date(a.frontmatter.publishDate).valueOf()
  );
---

<html lang="en">
  <head>
    <MainHead
      title="All Projects | Booker"
      description="Learn about Booker King most recent projects"
    />
  </head>
  <Body>
    <Nav />
    <!-- <div class="m-4"> -->
    <div class="flex 1"></div>
    <h1
      class="mt-20 pt-[56px] mb-5 text-center font-mplus text-xl md:text-xl lg:text-2xl p-2 font-semibold"
    >
      All Projects
    </h1>
    <div class="grid mb-5">
      {projects.map((project) => <PortfolioPreview project={project} />)}
    </div>
    <!-- </div> -->
    <Footer />
  </Body>
  <style>
    .grid {
      display: grid;
      grid-gap: 3rem;
    }
    /* .title {
    margin-top: 2rem;
    margin-bottom: 2rem;
  } */
  </style>
</html>
